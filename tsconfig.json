{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": ["node"],
    "lib": ["DOM", "ES2020"]
  },
  "include": ["*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
